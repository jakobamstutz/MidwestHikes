@model IEnumerable<MidwestHikes.Models.StateListState>

@{
    ViewBag.Title = "State";
}

<h2>View or add a State</h2>

<p>
    @Html.ActionLink("Add a State", "Create")
</p>
<table class="table">
    <tr>
        <th>
            State Id
        </th>
        <th>
            State Name
        </th>
        <th>
            Options
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StateId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StateName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.StateId }) |
            @Html.ActionLink("Details", "Details", new {  id=item.StateId  }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StateId })
        </td>
    </tr>
}

</table>
